<%- layout("/layouts/boilerplate.ejs") %>

<body>

    <!-- ==========About section============= -->
    <section class="contact-container">
        <div class="contact-content">
            <h1>Contact Us</h1>
            <p>Have a project in mind? Let's connect and discuss how we can help you.</p>
            <form action="/contact" method="POST" class="contact-form">
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" id="name" name="name" required placeholder="Enter your name">
                </div>
                
                <div class="form-group">
                    <label for="name">Mobile number</label>
                    <input type="number" id="number" name="ph" required placeholder="Enter available contact number">
                </div>
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required placeholder="Enter your email">
                </div>
                
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5" required placeholder="Enter your message"></textarea>
                </div>
                
                <button type="submit" class="contacts-btn">Send Message</button>
            </form>
        </div>
    </section>
    
 
    <!-- JavaScript for Toggle Menu -->
    <script src="script.js"></script>
</body>
